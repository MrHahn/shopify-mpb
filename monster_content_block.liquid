{%- capture background_image -%}
  {%- unless mb.monster_content_bg == blank -%}
    style="background: url({{ mb.monster_content_bg | img_url: 'master' }}) top center / cover no-repeat;"
  {%- endunless -%}
{%- endcapture -%}

{%- capture section_padding -%}
  padding: {%- if mb.sec_padding != blank -%} {{ mb.sec_padding | append: "px" }} {%- else -%}0{%- endif -%} 0;
{%- endcapture -%}

{%- capture background_transp -%}
    {%- unless mb.show_transp == blank -%}
    	background-color: rgba({{mb.monster_transp | color_extract: 'red'}}, {{mb.monster_transp | color_extract: 'green'}}, {{mb.monster_transp | color_extract: 'blue'}}, {{mb.monster_avalue | append: '%'}});
    {%- endunless -%}
{%- endcapture -%}

{%- capture heading_styles -%}
    {%- unless mb.content_heading_size == blank -%}
    	font-size: {{mb.content_heading_size | append: 'px' }};
    {%- endunless -%}
    {%- unless mb.content_heading_color == blank -%}
    	color: {{mb.content_heading_color | color_to_hex}};
    {%- endunless -%}
{%- endcapture -%}

{%- capture subheading_styles -%}
    {%- unless mb.content_subheading_size == blank -%}
      font-size: {{mb.content_subheading_size | append: 'px' }};
    {%- endunless -%}
    {%- unless mb.content_subheading_color == blank -%}
      color: {{mb.content_subheading_color | color_to_hex}};
    {%- endunless -%}
{%- endcapture -%}


<div {{ background_image }} class="monster-block-item row__content block-{{block.id}} {{mb.custom_class}}">
  <div style="{{ background_transp }} {{ section_padding }}" class="monster-content-inner-wrap">
    <div class="{{container_width}}">
      <div class="row {{mb.text_align}}">
        <div class="col-sm-12">
          {%- unless mb.content_heading == blank -%}
              <h2 class="monster-content-heading" style="{{heading_styles}}">{{mb.content_heading}}</h2>
          {%- endunless -%}
          {%- unless mb.content_subheading == blank -%}
              <div class="monster-content-content" style="{{subheading_styles}}">{{mb.content_subheading}}</div>
          {%- endunless -%}
          {%- unless mb.content_link == blank -%}
              <a href="{{mb.content_link}}" class="btn {{mb.button_style}}">{{mb.content_btn}}</a>
          {%- endunless -%}
        </div>
      </div>
    </div>
  </div>
</div>
